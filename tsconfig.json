{
  "compilerOptions": {
    "module": "CommonJS",
    "incremental": true,
    "target": "ES2018",
    "removeComments": true,
    "strict": true,
    "strictPropertyInitialization": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "alwaysStrict": true,
    "rootDir": "src",
    "outDir": "dist",
    "lib": ["ES2021"],
    "esModuleInterop": true,
    "moduleResolution": "node"
    // "declarationDir": "declarations",
    // "declaration": true
  },
  "include": ["*.*", "**/*.*"],
  "exclude": ["node_modules", "src/bot/services/dashboard/public/*", "src/bot/services/dashboard/public/**/*"]
}
