{
  "$schema": "http://json-schema.org/schema",
  "$id": "json-cmds-schema",
  "title": "Package",
  "description": "A package stores is a simple module stored in JSON form",
  "type": "object",
  "required": ["name", "help", "commands"],
  "properties": {
    "name": {
      "description": "The name of your package",
      "type": "string"
    },
    "help": {
      "description": "A string providing information about your package",
      "type": "string"
    },
    "commands": {
      "description": "A list of commands that the package provides",
      "type": "array",
      "items": {
        "description": "Command provided by the package",
        "type": "object",
        "required": ["name", "syntax", "help", "listeners"],
        "properties": {
          "name": {
            "description": "A name for the command",
            "type": "string"
          },
          "syntax": {
            "description": "A string describing the arguments need to use the command",
            "type": "string"
          },
          "help": {
            "description": "A string describing what the command does",
            "type": "string"
          },
          "listeners": {
            "description": "An array of listeners",
            "type": "array",
            "items": {
              "description": "A listener that does actions when an event happens",
              "type": "object",
              "required": ["on", "actions"],
              "properties": {
                "on": {
                  "type": "string",
                  "description": "The event to trigger the listener on"
                },
                "actions": {
                  "type": "array",
                  "description": "Actions ran when the listener is triggered",
                  "items": {
                    "type": "object",
                    "description": "An action that should be run",
                    "required": ["args", "type"],
                    "properties": {
                      "type": {
                        "type": "string",
                        "description": "The type of the action"
                      },
                      "args": {
                        "type": "array",
                        "description": "An array of strings that together specify what should be outputted",
                        "items": {
                          "type": "string",
                          "description": "A part of the args array"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
